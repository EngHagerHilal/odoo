<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form - fixed_discount</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="before">
                <field name="discount_fixed" groups="sale.group_discount_per_so_line"/>
                <field name="amount_extra" groups="sale.group_discount_per_so_line"/>
                <field name="amount_deduct" groups="sale.group_discount_per_so_line"/>
                <field name="amount_commission" groups="sale.group_discount_per_so_line"/>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_line_tree" model="ir.ui.view">
        <field name="name">account.invoice.line.tree - fixed_discount</field>
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_tree"/>
        <field name="arch" type="xml">
            <field name="discount" position="before">
                <field name="discount_fixed" groups="sale.group_discount_per_so_line"/>
                <field name="amount_extra" groups="sale.group_discount_per_so_line"/>
                <field name="amount_deduct" groups="sale.group_discount_per_so_line"/>
                <field name="amount_commission" groups="sale.group_discount_per_so_line"/>
            </field>
        </field>
    </record>

    <record id="view_invoice_line_form" model="ir.ui.view">
        <field name="name">account.invoice.line.form - fixed_discount</field>
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_form"/>
        <field name="arch" type="xml">
            <field name="discount" position="before">
                <field name="discount_fixed" groups="sale.group_discount_per_so_line"/>
                <field name="amount_extra" groups="sale.group_discount_per_so_line"/>
                <field name="amount_deduct" groups="sale.group_discount_per_so_line"/>
                <field name="amount_commission" groups="sale.group_discount_per_so_line"/>
            </field>
        </field>
    </record>

     <record id="account_invoice_supplier_form" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form - fixed_discount</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="before">
                <field name="discount_fixed" groups="sale.group_discount_per_so_line"/>
                <field name="amount_extra" groups="sale.group_discount_per_so_line"/>
                <field name="amount_deduct" groups="sale.group_discount_per_so_line"/>
                <field name="amount_commission" groups="sale.group_discount_per_so_line"/>
            </xpath>
        </field>
    </record>

</odoo>
