<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="is_training" attrs="{'invisible': [('type', '!=', 'service')]}"/>
                <field name="trainer_ids" widget="many2many_tags" options="{'no_open':True,'no_create':True}"
                       attrs="{'invisible': [('is_training', '=', False)],
                               'required': [('is_training', '=', True)]}"/>
                <field name="is_maintenance" attrs="{'invisible': [('type', '!=', 'service')]}"/>
                <field name="maintenance_ids" widget="many2many_tags" options="{'no_open':True,'no_create':True}"
                       attrs="{'invisible': [('is_maintenance', '=', False)],
                               'required': [('is_maintenance', '=', True)]}"/>
            </xpath>
        </field>
    </record>


</odoo>
