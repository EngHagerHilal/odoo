<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_branch_form" model="ir.ui.view">
        <field name="name">res.branch.search</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <form string="Menu">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="pricelist_id"/>
                            <field name="analytic_tag_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_res_branch_tree" model="ir.ui.view">
        <field name="name">res.branch.search</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <tree string="Menu">
                <field name="name"/>
                <field name="code"/>
                <field name="pricelist_id"/>
                <field name="analytic_tag_id"/>
            </tree>
        </field>
    </record>

    <record id="view_res_branch_search" model="ir.ui.view">
        <field name="name">res.branch.search</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <search string="Branch">
                <field name="name"/>
                <field name="code"/>
                <field name="pricelist_id"/>
                <field name="analytic_tag_id"/>
                <group expand="0" string="Group By">
                    <filter string="Pricelist" name="pricelist_id" domain="[]" context="{'group_by':'pricelist_id'}"/>
                    <filter string="Analytic Tag" name="analytic_tag_id" domain="[]" context="{'group_by':'analytic_tag_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_res_branch" model="ir.actions.act_window">
        <field name="name">Branch</field>
        <field name="res_model">res.branch</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_empty_folder">
            There's no branches yet
          </p>
        </field>
    </record>

    <menuitem id="menu_res_branch"
              action="action_res_branch"
              parent="sale.menu_sale_config"
              sequence="100"/>

</odoo>
