<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/control" position="replace"/>
            <xpath expr="//page[2]" position="replace"/>
            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="options"></attribute>
            </xpath>
            <xpath expr="//field[@name='pricelist_id']" position="after">
                <field name="date_payment"/>
                <field name="branch_id" options="{'no_open':True,'no_create':True}" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='discount']" position="after">
                <field name="amount_extra"/>
                <field name="amount_deduct"/>
                <field name="amount_commission"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//div[@name='discount']" position="after">
                <label for="amount_extra"/>
                <div name="amount_extra">
                    <field name="amount_extra" class="oe_inline"/> %
                </div>
                <label for="amount_deduct"/>
                <div name="amount_deduct">
                    <field name="amount_deduct" class="oe_inline"/> %
                </div>
                <label for="amount_commission" attrs="{'invisible': [('is_training', '=', False)]}"/>
                <div name="amount_commission">
                    <field name="amount_commission" attrs="{'invisible': [('is_training', '=', False)]}"
                           class="oe_inline"/>
                </div>
                <label for="responsible_id" attrs="{'invisible': [('is_training', '=', False)]}"/>
                <div name="responsible_id">
                    <field name="responsible_id"
                           domain="responsible_domain"
                           attrs="{'invisible': [('is_training', '=', False)],
                                   'required': [('is_training', '=', True)]}"
                           options="{'no_open':True,'no_create':True}"/>
                    <field name="is_training" invisible="1"/>
                    <field name="responsible_domain" invisible="1"/>
                </div>
                <label for="maintenance_responsible_id" attrs="{'invisible': [('is_maintenance', '=', False)]}"/>
                <div name="responsible_id">
                    <field name="maintenance_responsible_id"
                           domain="maintenance_responsible_domain"
                           attrs="{'invisible': [('is_maintenance', '=', False)],
                                   'required': [('is_maintenance', '=', True)]}"
                           options="{'no_open':True,'no_create':True}"/>
                    <field name="is_maintenance" invisible="1"/>
                    <field name="maintenance_responsible_domain" invisible="1"/>
                </div>
            </xpath>

            <xpath expr="//field[@name='order_line']/form//label[@for='discount']"
                   position="before">
                <field name="discount_fixed" groups="sale.group_discount_per_so_line"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='discount']"
                   position="before">
                <field name="discount_fixed" groups="sale.group_discount_per_so_line"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_manager" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id" eval="[(4,ref('sales_team.group_sale_manager'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//field[@name='branch_id']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_start_end_dates.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_start_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='default_end_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
