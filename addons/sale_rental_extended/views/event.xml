<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_event_form" model="ir.ui.view">
        <field name="name">event.event.form</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='auto_confirm']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='twitter_hashtag']" position="replace"/>
            <xpath expr="//field[@name='twitter_hashtag']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group/group[2]/div" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='is_online']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='is_online']" position="replace"/>
            <xpath expr="//field[@name='organizer_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='organizer_id']" position="after">
                <field name="organizer_ids" widget="many2many_tags" options="{'no_open':True,'no_create':True}"/>
                <field name="attendee_domain" invisible="1"/>
                <field name="attendee_ids" domain="attendee_domain"
                       widget="many2many_tags" options="{'no_open':True,'no_create':True}"/>
            </xpath>
            <xpath expr="//field[@name='date_tz']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='seats_min']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='seats_max']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='event_type_id']" position="attributes">
                <attribute name="options"></attribute>
            </xpath>
            <xpath expr="//field[@name='seats_availability']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='seats_availability']" position="replace"/>
            <xpath expr="//group/group[4]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='event_mail_schedule']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="event_event_view_form_inherit_website" model="ir.ui.view">
        <field name="name">event.event.form</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="website_event.event_event_view_form_inherit_website"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_menu']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='website_menu']" position="replace"/>
        </field>
    </record>

</odoo>
