<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_outstanding_wizard_form" model="ir.ui.view">
        <field name="name">product.outstanding.wizard.form</field>
        <field name="model">product.outstanding.wizard</field>
        <field name="arch" type="xml">
        <form string="Tax Reports">
            <group>
                <group>
                    <field name="date_from"/> 
                </group>
                <group>
                    <field name="date_to"/> 
                </group>
            </group>
                <group string="Partners">
                    <field name="partner_ids" nolabel="1"/> 
                </group>
            
            <footer>
                <button name="action_print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                or <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_product_outstanding_wizard" model="ir.actions.act_window">
        <field name="name">Product Outstanding Report</field>
        <field name="res_model">product.outstanding.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_product_outstanding_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_product_outstanding_wizard"
        name="Product Outstanding Report"
        action="action_product_outstanding_wizard"
        parent="sale.menu_sale_report"/>

</odoo>
